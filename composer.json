{
  "name": "omnilight/yz2-app-standard",
  "description": "Standard application based on Yii2 and Yz2",
  "keywords": [
    "yii",
    "framework",
    "yz",
    "application template"
  ],
  "minimum-stability": "dev",
  "authors": [
    {
      "name": "Pavel Agalecky",
      "email": "pavel.agalecky@gmail.com"
    }
  ],
  "type": "project",
  "require": {
    "php": ">=5.4.0",
    "yiisoft/yii2": "2.0.*",
    "yiisoft/yii2-bootstrap": "2.0.*",
    "dmstr/yii2-migrate-command": "*",
    "vlucas/phpdotenv": "1.1.*",
    "omnilight/yz2": "*",
    "omnilight/yz2-admin": "*"
  },
  "require-dev": {
    "yiisoft/yii2-debug": "2.*",
    "yiisoft/yii2-gii": "2.*",
    "omnilight/yz2-gii": "*"
  },
  "autoload": {
    "psr-4": {
      "frontend\\": "app/frontend",
      "backend\\": "app/backend",
      "console\\": "app/console",
      "modules\\": "app/modules"
    }
  },
  "config": {
    "vendor-dir": "app/vendor",
    "bin-dir": "app/vendor/bin"
  },
  "extra": {
    "asset-installer-paths": {
      "npm-asset-library": "app/vendor/npm",
      "bower-asset-library": "app/vendor/bower"
    }
  }
}